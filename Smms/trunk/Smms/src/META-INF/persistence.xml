<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="SmmsPU" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>java:/comp/env/jdbc/mysmmsDS</jta-data-source>
		<class>com.smms.model.Authorities</class>
		<class>com.smms.model.Users</class>
		<class>com.smms.model.Account</class>
		<class>com.smms.model.Sku</class>
		<class>com.smms.model.Purchese</class>
		<class>com.smms.model.DailyPerformance</class>
		 <properties>
    <property name="eclipselink.session.customizer" value="com.smms.service.JPAEclipseLinkSessionCustomizer"/>        
    <property name="eclipselink.logging.level" value="FINEST"/>
    <property name="eclipselink.jdbc.batch-writing" value="JDBC"/> 
   
   </properties>
		
	</persistence-unit>
</persistence>
